page{
    height: 100%;
    background-color: #ffffff;
}
.container{
    height: 100%;
    display: flex;
    flex-direction: column; 
    justify-content: inherit;
    background-color: #ffffff;
}
.form-box{
    width:100%;
    background-color: #fff;
    margin-top: 20rpx;
}
.row-wrap{
    width: 720rpx;
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    font-size: 28rpx;
    /*justify-content: space-between;*/
}
 /* .row-wrap:nth-last-child(1){
  border-bottom: none
}  */

/* .row-wrap:last-of-type{
  border-bottom: none
} */

.row-wrap .label{
    width: 160rpx;
    color: #000
}
.row-wrap .label-right{
    flex: 1;
    height: 88rpx;
    line-height: 88rpx;
}
.row-wrap .label-right input{
  height: 100%;
  font-size: 28rpx;
  padding-right: 30rpx;
}
.row-wrap .right-box{
  margin-right: 30rpx; 
}
.arrow-right{
  width: 15rpx;
  height: 24rpx;
}
.allInfoBtn,
.greenCardBtn,
.green_btn{
  width: 670rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  color: #fff;
}
.allInfoBtn::after,
.greenCardBtn::after,
.green_btn::after,
.btn::after{
  border: none;
}

.btn{
  width: 670rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin: 24rpx 40rpx 0 40rpx;
}
.green_btn{
  width: 522rpx;
  height: 84rpx;
  background: #23BE81;
}
.allInfoBtn{
  background: #1EC4C5;
  margin: 24rpx 40rpx 0 40rpx;
}
.greenCardBtn{
  background: #1CC07F;
  margin-top: 50rpx;
}
button[type="default"]{
  background-color: #ffffff;
  color:#000;
}
.grad_wrap{
  position: relative;
  margin: 148rpx 0 100rpx;
  text-align: center;
}
.grad{
  width: 35%;
  line-height: 30rpx;
  border: 1px solid #eee;
}
.prompt_text,
.prompt_err{
  width: 670rpx;
  margin: 18rpx auto 0;
  font-size: 26rpx;
}
.prompt_text{
  color: #AFAFAF;
}
.prompt_err{
  color: #FF2E2C;
}
.green_dialog{
  width: 670rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  z-index: 100;
  border-radius: 10rpx;
}
.green_dialog_wrap{
  position:fixed;
  left:0;
  top:0;
  right:0;
  bottom:0;
  width:100%;
  height:100%;
  background:rgba(0,0,0,.5);
  z-index:11;
  transition: all 1s ease;
}
.green_text{
  width: 590rpx;
  font-size: 28rpx;
  padding: 100rpx 40rpx;
  word-wrap: break-word;
  word-break: break-all;
  text-indent: 2em;
  color: #444444;
}
.custom_btn{
  background: #545454;
  margin: 48rpx auto 100rpx;
}
.close_dialog{
  float: right;
  width: 46rpx;
  height: 46rpx;
  padding: 12rpx
}

.line{
  width: 670rpx;
  height: 2rpx;
  vertical-align: middle;
}
.green_title{
  position: absolute;
  left: 31%;
  font-size: 28rpx;
  color: #AFAFAF
}