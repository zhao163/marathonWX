.participateBtn{
  position: absolute;
  bottom: 450rpx;
  left: 200rpx;
  width: 300rpx;
  height: 84rpx;
  line-height: 84rpx;
  animation: mymove 1s infinite both;
}

@keyframes mymove{
  0% {
    transform:scale(1,1);
  }
  50% {
    transform:scale(1.1,1.1);
  }
  100% {
    transform:scale(1,1);
  }
}