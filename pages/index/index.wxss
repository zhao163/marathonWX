/**index.wxss**/

page {
  height: 100%;
  width: 100%;
  position: relative;
}

.flex-wrap {
  width: 100%;
  height: 100%;
}

.one {
  width: 100%;
  height: 100%;
}

.mainbg {
  height: 100%;
  width: 100%;
  position: absolute;
}

.describtion {
  width: 143rpx;
  height: 40rpx;
  right: 0rpx;
  position: absolute;
  top: 320rpx;
}

.mainbtn {
  position: absolute;
  top: 30%;
  left: 50%;
  margin-left: -190rpx;
  width: 380rpx;
  height: 114rpx;
  animation: mymove 1s infinite both;
	transform: translate3d(0, 0, 0);
	backface-visibility: hidden;
	perspective: 1000px;
}
@keyframes mymove{
  0% {
    transform:scale(1,1);
  }
  50% {
    transform:scale(1.1,1.1);
  }
  100% {
    transform:scale(1,1);
  }
}

.code {
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.describe {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 100;
  background: rgba(0, 0, 0, 0.1);
}

.describe .describe_img {
  position: absolute;
  z-index: 200;
  width: 716rpx;
  height: 1128rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.close {
  position: absolute;
  height: 30rpx;
  width: 30rpx;
  top: 90rpx;
  right: 124rpx;
  z-index: 300;
}

.save-btn, .cancel-btn {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  margin-top: 30rpx;
  border-radius: 6rpx;
  box-sizing: border-box;
}

.forcasttwo_wrap {
  height: 100%;
  width: 100%;
  position: absolute;
  z-index: 10;
  background: rgba(0, 0, 0, 0.7);
}
.forcasttwo_text{
  position: absolute;
  z-index: 20;
  width:420rpx;
  height:200rpx;
  margin-left:180rpx;
  margin-top:580rpx;
  color:#0b7159;
}
.forcasttwo_img {
  position: absolute;
  height: 771rpx;
  width: 579rpx;
  margin-left: 86rpx;
  margin-top: 200rpx;
}

.save-btn {
  background-color: #e64340;
  color: #fff;
}

button[type="default"] {
  background-color: #fff;
  color: #000;
}

.ranklogo{
  width:108rpx;
  height:111rpx;
  position: absolute;
  right:50rpx;
  z-index:30;
  animation: shake 1.2s infinite both;
	transform: translate3d(0, 0, 0);
	backface-visibility: hidden;
	perspective: 1000px;
}
@keyframes shake {
	10%, 90% {
		transform: translate3d(-1px, 0, 0);
	}
	20%, 80% {
		transform: translate3d(2px, 0, 0);
	}
	30%, 50%, 70% {
		transform: translate3d(-4px, 0, 0);
	}
	40%, 60% {
		transform: translate3d(4px, 0, 0);
	}
}