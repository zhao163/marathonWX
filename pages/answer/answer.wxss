.question{
  height: 100%;
  width:100%;
}
.question_bg{
  height:100%;
  width:100%;
}
.question_wrap{
  position: absolute;
  top: 68rpx;
  left: 26rpx;
  right: 26rpx;
}
.question_content{
  background: #56CA98;
  border-radius: 30rpx 30rpx 0 0;
